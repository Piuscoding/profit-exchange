

<%- include('partials/dashboardHeader')%>


 <!-- Content Wrapper. Contains page content -->
 <div class="content-wrapper" style="min-height: 929.391px;">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>All Transactions</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="dashboard">Home</a></li>
            <li class="breadcrumb-item active">transactions</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>



  
  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
         




        <!-- Profile Image -->
        <div class="card">
          <div class="card-body text-center">
            <div class="row">
              <div id="avatar-holder" class="col-md-12">
                <img id="avatar-img" width="40px" height="100px" class="img profile-user-img img-responsive img-circle" src="assets/upload/avatar.png" alt="User profile picture">
                <h5 class="mt-3 mb-0"><b>Transcation History can be found here</b></h5>
                <p>All transcation history are documented and recorded in real time kindly check the status of your transaction here</p>
              </div>
            </div>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <div class="col-md-8">
        <div class="card">
              <div class="card-body">
                  <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item shadow mb-3 mr-2">
                      <a class="nav-link active" id="account-details-tab" data-toggle="tab" href="#account-details" role="tab" aria-controls="account-details" aria-selected="true">Deposit History</a>
                    </li>
                    <li class="nav-item shadow mb-3 mr-2">
                      <a class="nav-link" id="login-details-tab" data-toggle="tab" href="#login-details" role="tab" aria-controls="login-details" aria-selected="false">Widthdraw History</a>
                    </li>
                       
                                                              </ul>
                  <!-- Tab panes -->
                  <div class="tab-content mt-3 mx-0">

                      <div class="tab-pane active" id="account-details" role="tabpanel" aria-labelledby="account-details-tab">
                            <div class="table-responsive">

                            <table class="table table-striped table-sm">
                              <thead>
                                <tr>
                                  <th scope="col">Wallet</th>
                                  <th scope="col">Amount</th>
                                  <th scope="col">status</th>
                                  <th scope="col" class="text-end">Action</th>
                                </tr>
                              </thead>
                          
                              <tbody>
                                <% if(user.deposits.length > 0 ){ %>
                                <%  user.deposits.forEach(deposit => {  %>
                                  <tr class="align-middle">
                                    <td><%=deposit.wallet%></td>
                                    <td><%=deposit.amount%></td>
                                    <td><%=deposit.status%></td>
                                    <td class="text-end">
                                      <div class="d-flex flex-row justify-content-end gap-2">
                                       <button type="button" class="btn btn-danger"><i class="bi bi-check"></i></button>
                                      </div>
                                    </td>
                                  </tr>
                                <%  }) %>
                              <%  } %>
                              </tbody>
                            </table>
                          </div> 
                      </div>



                      <div class="tab-pane" id="login-details" role="tabpanel" aria-labelledby="login-details-tab">
                        <div class="table-responsive">

                          <table class="table table-striped table-sm">
                            <thead>
                              <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Amount</th>
                                <th scope="col">status</th>
                                <th scope="col" class="text-end">Action</th>
                              </tr>
                            </thead>
                        
                            <tbody>
                              <% if(user.widthdraws.length > 0 ){ %>
                              <%  user.widthdraws.forEach(widthdraw => {  %>
                                <tr class="align-middle">
                                  <td><%=widthdraw.createdAt%></td>
                                  <td><%=widthdraw.amount%></td>
                                  <td><%=widthdraw.status%></td>
                                  <td class="text-end">
                                    <div class="d-flex flex-row justify-content-end gap-2">
                                     <button type="button" class="btn btn-success"><i class="bi bi-check"></i></button>
                                    </div>
                                  </td>
                                </tr>
                              <%  }) %>
                            <%  } %>
                            </tbody>
                          </table>
                          </div>
                      </div>


                                     
                                                                  </div>
              </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
          </div>
          <!-- /.row -->
        </div>

  </section>
        <!-- /.content -->
</div>
<!-- /.content-wrapper -->



    <%- include('partials/dashboardFooter')%>